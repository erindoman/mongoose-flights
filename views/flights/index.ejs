<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="stylesheets/style.css">
    <title>Flight Index</title>
</head>
<body>

<table id="list">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
            <th>Details</th>
            <th>Delete</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %> </td>
                <td><%= f.airport %> </td>
                <td><%= f.flightNo  %> </td>
                <td><%= f.departs %> </td>
                <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                <td>
                <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
                <button>X</button>
                </form>
                </td>
            </tr>
        <% }) %> 
    </tbody>
</table>

    
</body>
</html>