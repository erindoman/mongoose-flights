<%- include('../partials/header') %>
<table id="list">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %> </td>
                <td><%= f.airport %> </td>
                <td><%= f.flightNo  %> </td>
                <td><%= f.departs %> </td>
                <td><a href="/<%= f._id %>">DETAILS</a></td>
                <td>
                <form action="/<%= f._id %>?_method=DELETE" method="POST">
                <button>X</button>
                </form>
                </td>
            </tr>
        <% }) %> 
    </tbody>
</table>
<%- include('../partials/footer') %>
