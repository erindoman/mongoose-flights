<%- include('../partials/header') %>
<table id="list">
    <thead>
        <tr>
            <th>Airport</th>
            <th>Flight Number</th>
            <th>Departs</th>
            <th>Details</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airport %> </td>
                <td><%= f.flightNo  %> </td>
                <td><%= f.departs %> </td>
                <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                <td>
                    <form action="/flights/<%= f._id %>?_method=DELETE" method="POST">
                        <button>Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %> 
        </tbody>
    </table>  
    <%- include('../partials/footer') %>
